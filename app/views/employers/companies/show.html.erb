<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <%= link_to employers_companies_path, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-list-alt"></span>
          All Companies
        <% end %>
        <%= link_to edit_employers_company_path(@company), class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-pencil"></span>
          Edit
        <% end %>
        <h1>Show company</h1>
        <%= @company.name  %>
        <%= image_tag @company.logo %>
      </div>

      <dl class="dl-horizontal">
      </dl>
    </div>
  </div>
</div>
